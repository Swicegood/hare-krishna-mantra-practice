            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="@string/first_fragment_6"
            style="@style/CustomTextViewStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/textview7"
